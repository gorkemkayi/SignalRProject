@model List<SignalRWebUI.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımızda Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Hakkımızda alanı ile ilgili işlemleri yapabilirsiniz. Sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.AboutId</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a class="btn btn-outline-danger" href="/About/DeleteAbout/@item.AboutId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="/About/UpdateAbout/@item.AboutId">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a class="btn btn-outline-primary" href="/About/CreateAbout/">Yeni Hakkımda Yazısı Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

