@model List<SignalRWebUI.Dtos.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans Yorum İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Referans Yorum Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Müşterilerin yaptığı yorumlarla ilgili işlemlerinizi burdan yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.TestimonialId</td>
										<td>@item.Name</td>
										<td>@item.Status</td>
										<td><a class="btn btn-outline-danger" href="/Testimonial/DeleteTestimonial/@item.TestimonialId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="/Testimonial/UpdateTestimonial/@item.TestimonialId">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a class="btn btn-outline-primary" href="/Testimonial/CreateTestimonial/">Yeni Müşteri Yorumu Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

