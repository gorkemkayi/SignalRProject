 @model List<SignalRWebUI.Dtos.DiscountDtos.ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Günün İndirimlileri Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün indirimli ürünleri aşağıda yer almaktadır. tema bütünlüğü için 2 adet indirimli ürün seçiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountId</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td><a class="btn btn-outline-warning" href="/Discount/DeleteDiscount/@item.DiscountId">Durum</a></td>
										<td><a class="btn btn-outline-danger" href="/Discount/DeleteDiscount/@item.DiscountId">Sil</a></td>
										<td><a class="btn btn-outline-success" href="/Discount/UpdateDiscount/@item.DiscountId">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a class="btn btn-outline-primary" href="/Discount/CreateDiscount/">Yeni İndirimli Ürün Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

